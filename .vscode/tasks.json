{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Webpack watch",
            "type": "process",
            "options": {
                "cwd": "${cwd}/ActuallyStandard"
            },
            "command": "./node_modules/.bin/webpack",
            "args": ["--watch"]
        },
        {
            "label": "Build .NET Solution",
            "type": "shell",
            "command": "dotnet",
            "args": ["build"]
        }
    ]
}